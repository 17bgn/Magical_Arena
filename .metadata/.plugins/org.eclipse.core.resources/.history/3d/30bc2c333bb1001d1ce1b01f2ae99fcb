		System.out.println("Enter the num odf elements");
		int x=s.nextInt();
		int array[]=new int[x];
		System.out.println("enter the elemtns");
		 for(int i=0;i<x;i++)
		 {
			 array[i]=s.nextInt();
		 }
		 int len=array.length;
		 System.out.println("length= "+len);
		 int sum=0;
		 System.out.println("for each loop");
