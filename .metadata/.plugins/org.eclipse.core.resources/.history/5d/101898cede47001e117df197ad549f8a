import java.util.Scanner;

public class Tests {
	public static void main(String java[]) {
		Scanner sc=new Scanner(System.in);
		  System.out.println("User! please enter the byte value of age");
		  byte age = sc.nextByte();
		  System.out.println("User! please enter the short value of marks");
		  short marks = sc.nextShort();
		  System.out.println("User! please enter the int value of population");
		  int population = sc.nextInt();
		  System.out.println("User! please enter the long value of countryPopulation");
		  long countryPopulation = sc.nextLong();
		  
		  System.out.println("\nByte value : "+age);
		  System.out.println("Short value : "+marks);
		  System.out.println("Int value : "+population);
		  System.out.println("Long value : "+countryPopulation);
		
	}
}